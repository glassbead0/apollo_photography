<%= stylesheet_link_tag 'upload', media: 'all' %>

<div class="upload-container">
  <h1>Upload Photo to Sell</h1>

  <%= form_with model: @photo, local: true do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :base_price %>
      <%= form.number_field :base_price, step: 0.01, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :image %>
      <%= form.file_field :image, class: "form-control-file" %>
    </div>

    <div class="form-group">
      <%= form.submit "Upload Photo", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<%= link_to "Back to Gallery", photos_path, class: "back-link" %>
