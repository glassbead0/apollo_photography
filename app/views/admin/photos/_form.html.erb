<%= form_with(model: [:admin, @photo], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :base_price, "Base Price" %>
    <%= form.number_field :base_price, step: 0.01, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image, @photo.new_record? ? "Selet file" : "Upload new file if desired" %>
    <%= form.file_field :image, class: "form-control-file" %>
  </div>

  <div class="form=group">
    <%= form.label :active, "Active?" %>
    <%= form.check_box :active, class: "form-check-input" %>
  </div>
</br>
  <div class="form-group">
    <%= form.submit @photo.new_record? ? "Upload Photo" : "Update Photo", class: "btn btn-primary" %>
  </div>

   <div class="form-actions">
    <%= link_to "Back to Admin Portal", admin_photos_path, class: "btn btn-secondary back-link" %>
    <%= link_to "Back to Gallery", photos_path, class: "btn btn-secondary back-link" %>
  </div>

<% end %>